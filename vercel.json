{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": ["api/requirements.txt"],
        "runtime": "python3.12"
      }
    },
    { "src": "static/**",    "use": "@vercel/static" },
    { "src": "templates/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/static/(.*)",    "dest": "/static/$1" },
    { "src": "/templates/(.*)", "dest": "/templates/$1" },
    { "src": "/api/(.*)",       "dest": "/api/index.py" },
    { "src": "/(.*)",           "dest": "/api/index.py" }
  ]
}
