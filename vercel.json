{
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.10",
        "maxLambdaSize": "15mb",
        "includeFiles": ["static/**", "utils/**"],
        "installCommand": "pip install -r requirements.txt && python -c \"import nltk; nltk.download('stopwords')\""
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ]
}